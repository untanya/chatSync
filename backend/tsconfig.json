{
    "compilerOptions": {
        "target": "ES2024",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "rootDir": "./src", 
        "outDir": "./dist",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    
    "include": ["src/**/*.ts"],
    "ts-node": {
      "esm": true,
      "transpileOnly": true
    }
  }